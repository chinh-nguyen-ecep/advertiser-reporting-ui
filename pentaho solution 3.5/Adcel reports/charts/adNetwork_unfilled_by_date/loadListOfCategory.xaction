<?xml version="1.0" encoding="UTF-8"?>
<action-sequence> 
  <title>Load list of Category</title>
  <version>1</version>
  <logging-level>ERROR</logging-level>
  <documentation> 
    <author/>  
    <description>Empty blank action sequence document</description>  
    <help/>  
    <result-type/>  
    <icon/> 
  </documentation>

  <inputs/>

  <outputs> 
    <result type="string"> 
      <destinations> 
        <response>Content</response> 
      </destinations> 
    </result> 
  </outputs>

  <resources/>
  
  <actions> 
    <action-definition> 
      <component-name>SQLLookupRule</component-name>
      <action-type>Relational</action-type>
      <action-outputs> 
        <query-result type="result-set" mapping="query_result"/> 
      </action-outputs>
      <component-definition> 
        <jndi><![CDATA[dw3]]></jndi>  
        <live><![CDATA[false]]></live>  
        <query><![CDATA[SELECT a.*
FROM (
SELECT 'All Categories' as "value",'All Categories' as title,'All Categories' as name_view, 0 as row_order
UNION
SELECT 
	category_name as "value",
	category_name||'('||content_category_id||')' as title, 
	(case when char_length(category_name)<30 then category_name else substring(category_name from 0 for 30)||'...' end)||'('||content_category_id||')' as name_view,
	(case when content_category_id=-200 then 1 else 2 end) as row_order
FROM (
SELECT content_category_id, category_name
FROM adstraffic.daily_unfilled_stats_by_content_category
WHERE is_active=true
GROUP BY content_category_id, category_name
) a
) a
ORDER BY row_order,name_view;]]></query>
      </component-definition> 
    </action-definition>
  
    <action-definition> 
      <component-name>JavascriptRule</component-name>
      <action-type>JavaScript</action-type>
      <action-inputs> 
        <query_result type="result-set"/> 
      </action-inputs>
      <action-outputs> 
        <result type="string"/> 
      </action-outputs>
      <component-definition> 
        <script><![CDATA[var result;
result='<table><tr></tr>';

for(var i=0;i<query_result.getRowCount();i++){
	var value=query_result.getValueAt(i,0);
	var title=query_result.getValueAt(i,1);
	var view=query_result.getValueAt(i,2);
	if(i==0){
	result+='<tr><td><input id="device_'+value+'" class="portlet-form-field" type="checkbox" name="device" value="'+value+'" title="" checked><span id="device-label" class="portlet-form-field-label" title="'+title+'">'+view+'</span></td></tr>';
	}else{
	result+='<tr><td><input id="device_'+value+'" class="portlet-form-field" type="checkbox" name="device" value="'+value+'" title=""><span id="device-label" class="portlet-form-field-label" title="'+title+'">'+view+'</span></td></tr>';
	}
	
}

result+='</table>';]]></script>
      </component-definition> 
    </action-definition>
 
  </actions> 
</action-sequence>