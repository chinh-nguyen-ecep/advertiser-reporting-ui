	<queryString>
		<![CDATA[select
inv_detail_id
,account_name
,invoice_amount
from accounting.ba_inv_local_report_detail
where inv_mmyy=$P{p_month_year} --pass month
and status = 'ACTIVE' --pass status
and inv_detail_id =  $P{p_inv_detail_id}--pass specific invoice number
group by
inv_detail_id
,account_name
,invoice_amount
order by inv_detail_id, account_name;]]>
	</queryString>
	<field name="invoice_amount" class="java.lang.Double"/>
	<background>
		<band splitType="Stretch"/>
	</background>
